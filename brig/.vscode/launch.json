    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'standalone'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=standalone",
                    "--package=standalone",
                    "--manifest-path=${workspaceFolder}/standalone/Cargo.toml"
                ],
                "filter": {
                    "name": "standalone",
                    "kind": "bin"
                }
            },
            "args": ["-v", "../cmp.bin"],
            "cwd": "${workspaceFolder}/standalone",
        },
    ]
}
