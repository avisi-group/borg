    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'standalone'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=standalone",
                    "--package=standalone",
                    "--manifest-path=${workspaceFolder}/brig/standalone/Cargo.toml"
                ],
                "filter": {
                    "name": "standalone",
                    "kind": "bin"
                }
            },
            "args": ["${workspaceFolder}/brig/brig-cli/guest_data/kernel"],
            "cwd": "${workspaceFolder}/brig/standalone",
            "env": {
                "RUST_LOG": "trace",
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'brig-cli'",
            "cargo": {
                "args":[
                    "+nightly",
                    "build",
                    "--bin=brig-cli",
                    "--package=brig-cli",
                    "--manifest-path=${workspaceFolder}/brig-cli/Cargo.toml"
                ],
                "filter": {
                    "name": "brig-cli",
                    "kind": "bin"
                },
            },
            "cwd": "${workspaceFolder}/brig-cli",
        },
    ]
}
