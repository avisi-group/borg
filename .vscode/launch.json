    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "brig standalone",
            "cargo": {
                "args": [
                    "build",
                    "--bin=standalone",
                    "--package=standalone",
                    "--manifest-path=${workspaceFolder}/brig/standalone/Cargo.toml"
                ],
                "filter": {
                    "name": "standalone",
                    "kind": "bin"
                }
            },
            "args": ["${workspaceFolder}/brig/brig-cli/guest_data/kernel"],
            "cwd": "${workspaceFolder}/brig/standalone",
            "env": {
                "RUST_LOG": "trace",
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "borealis",
            "cargo": {
                "args":[
                    "build",
                    "--bin=borealis",
                    "--package=borealis",
                    "--manifest-path=${workspaceFolder}/borealis/Cargo.toml"
                ],
                "filter": {
                    "name": "borealis",
                    "kind": "bin"
                },
            },
            "args": ["--dump-ir","/workspaces/ir","${workspaceFolder}/arm-v9.4-a_d43f3f4c.rkyv", "${workspaceFolder}/aarch64"],
            "cwd": "${workspaceFolder}/borealis",
        },
    ]
}
